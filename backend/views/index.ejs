				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" href="./">Home</a>
					</li>
					<!-- <li class="nav-item">
						<a class="nav-link" href="./lyrics">Song Lyrics</a>
					</li> -->
					<li class="nav-item">
						<a class="nav-link" href="./lyrics">Lyrics</a>
