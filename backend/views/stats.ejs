					<div class="row">
						<div class="input-group mb-3">
							<input class="form-control" type="text" placeholder="email" id="email" aria-label="Email" aria-describedby="basic-addon2" />
							<script>
								document.getElementById("email").onkeypress = function (e) {
									var key = e.charCode || e.keyCode || 0;
									if (key == 13) {
										e.preventDefault();
									}
								}
								</script>
							<input class="btn btn-outline-secondary" type='button' value='Submit' onclick="getUser()" />
						</div>
						<a id="userError">
							
						</a>
					</div>
					<br>
					
					<div id="user">
						<div class="card card-body mb-3">
							<div style="width: auto; height: auto; margin: 0 auto !important;" id="average">
								

							</div>
							<table class="table table-sm">
								<thead>
									<tr>
										<th scope="col">Game #</th>
										<th scope="col">Date</th>
										<th scope="col">Score</th>
									</tr>
								</thead>
								<tbody id="tbody">

								</tbody>
							</table>
